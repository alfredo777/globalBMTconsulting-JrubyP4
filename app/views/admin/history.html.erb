<h1>Panel de administraci√≥n</h1>
<div class="col-lg-12">
	<div class="col-md-6">
		<%= link_to 'Nuevo usuario +', create_user_path, class: "btn btn-primary pull-right" %>
		<table class="table table-bordered">
			<caption>Usuarios</caption>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				<%@users.each do |u| %>
				<tr>
					<td><%= "#{u.first_name} #{u.last_name}"%></td>
					<td><%= "#{u.email}"%></td>
				</tr>
				<%end%>
			</tbody>
		</table>
		<%= link_to 'Usuarios', users_path, class: "btn btn-primary pull-right" %>
	</div>
	<div class="col-md-6">
		<table class="table">
			<caption>Administradores</caption>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				<% @admins.each do |admin| %>
				<tr>
					<td><%= admin.name %></td>
					<td><%= admin.email %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
		<%= link_to 'Administradores', admins_path, class: "btn btn-primary pull-right" %>
	</div>
</div>