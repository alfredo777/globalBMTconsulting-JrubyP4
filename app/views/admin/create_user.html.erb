<div class="col-lg-12">
	<%= form_tag newest_user_path, :multipart => true do -%>
	<div class="col-md-6 panel panel-default" style="padding: 20px;">
	    <p>Avatar del usuario:</p><br/>
	    <%= file_field_tag 'avatar' %><br/>
		<%= text_field_tag 'first_name', '', placeholder: 'nombre',class: 'form-control' %><br/>
		<%= text_field_tag 'last_name', '', placeholder: 'apellido',class: 'form-control' %><br/>
		<%= text_field_tag 'linkedin', '', placeholder: 'linkedin', class: 'form-control' %><br/>
		<%= text_field_tag 'email', '', placeholder: 'email', class: 'form-control' %><br/>
		<%= password_field_tag 'password', '', placeholder: 'password', class: 'form-control' %>
	</div>
	<div class="col-md-1"></div>
	<div class="col-md-5 panel panel-default" style="padding: 20px;">
	    <p>Logo de la empresa:</p><br/>
	    <%= file_field_tag 'bussines_avatar' %><br/>
	    <p>Tarjeta de presentación frente:</p><br/>
	    <%= file_field_tag 'presentation_card_front' %><br/>
	    <p>Tarjeta de presentación reverso:</p><br/>
	    <%= file_field_tag 'presentation_card_behind' %><br/>
	    <%= submit_tag 'Crear Usuario', class: "btn btn-primary pull-right" %>
	</div>
	<%end%>
</div>