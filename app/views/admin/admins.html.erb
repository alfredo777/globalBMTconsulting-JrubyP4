
<h1> Administradores </h1>
<%=link_to new_admin_path, class: "btn btn-primary" do%>
   Crear un nuevo adminstrador
<%end%>
<table class="table">
	<caption>Tabla de administradores</caption>
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Email</th>
			<th colspan="2" rowspan="" headers="" scope=""></th>
		</tr>
	</thead>
	<tbody>
	   <% @admins.each do |admin| %>
		<tr>
			<td><%= admin.name %></td>
			<td><%= admin.email %></td>
			<td><%= link_to admin_update_path(id: admin.id) do %> <i class="fa fa-pencil" aria-hidden="true"></i> Actualizar<%end%></td>
			<td><%= link_to destroy_admin_path(id: admin.id), data: { confirm: 'Â¿Estas segura de eliminar el administrador?' } do %>  <i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar<%end%></td>
		</tr>
	   <%end%>
	</tbody>
</table>