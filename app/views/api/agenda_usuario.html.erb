<div class="col-lg-12">
    <%=link_to 'Regresar a los usuarios', users_path, class: "btn btn-primary pull-right"  %>
    <%= link_to 'Ver en JSON', agenda_usuario_json_path(Mail: @cliente.Mail), class: "btn btn-primary pull-right" %>
	<table class="table table-bordered">
		<caption>Usuario encontrado en la agenda de usuarios</caption>
		<thead>
			<tr>
				<th>Perfil</th>
				<th>Nombre</th>
				<th>Directo</th>
				<th>Teléfono 1 </th>
				<th>Teléfono 2 </th>
				<th>Mail</th>
				<th>Página web </th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @cliente.Perfil %></td>
				<td><%= @cliente.ClienteNombre %></td>
				<td><%= @cliente.EsDirecto %></td>
				<td><%= @cliente.Telefono1 %></td>
				<td><%= @cliente.Telefono2 %></td>
				<td><%= @cliente.Mail %></td>
				<td><%= @cliente.PaginaWeb %></td>
			</tr>
		</tbody>
	</table>
</div>
<div class="col-lg-12">
        <% if @proyectos.count != 0 %>
        <table class="table table-bordered">
        	<caption>Proyectos</caption>
        	<thead>
        		<tr>
        			<th>ProyectoNombre</th>
        			<th>Detalle</th>
        			<th>FechaRegistro</th>
        			<th>FechaInicio</th>
        			<th>FechaCierre</th>
        			<th>IdiomaFormato</th>
        		</tr>
        	</thead>
        	<tbody>
        	   <% @proyectos.each do |p| %>
        		<tr>
        			<td><%= p.ProyectoNombre %></td>
        			<td><%= p.Detalle %></td>
        			<td><%= p.FechaRegistro %></td>
        			<td><%= p.FechaInicio %></td>
        			<td><%= p.FechaCierre %></td>
        			<td><%= p.IdiomaFormato %></td>
        		</tr>
        		<%end%>
        	</tbody>
        </table>
        <%end%>
	<div class="col-md-6">
		<table class="table table-bordered">
			<caption>Subproyecotos Encontrados</caption>
			<thead>
				<tr>
					<th>SubProyectoNombre</th>
					<th>ContactoNombre</th>
					<th>ContactoTelefono</th>
					<th>ContactoMail</th>
					<th>Detalle</th>
					<th>Objetivos</th>
				</tr>
			</thead>
			<tbody>
				<% @subproyectos.each do |sp| %>
				<tr>
					<td><%= sp.SubProyectoNombre %></td>
					<td><%= sp.ContactoNombre %></td>
					<td><%= sp.ContactoTelefono %></td>
					<td><%= sp.ContactoMail %></td>
					<td><%= sp.Detalle %></td>
					<td><%= sp.Objetivos %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
	<div class="col-md-12">
	   <% @subproyectos.each do |sp| %>

		<table class="table table-bordered">
				<caption>Agenda de subproyectos <%= sp.SubProyectoNombre %> <%= sp.ContactoNombre %></caption>
				<thead>
					<tr>
						<th>AgendaOrden</th>
						<th>ContactoId</th>
						<th>Instrucciones</th>
						<th>FechaCita</th>
						<th>LugarCita</th>
						<th>LugarCita2</th>
						<th>LugarCita3</th>
						<th>LugarCita4</th>
						<th>Descripcion</th>
					</tr>
				</thead>
				<tbody>
				    <% @ag = agenda(sp) %>
					<% @ag.each do |ag| %>
					<tr>
						<td><%= ag.AgendaOrden%></td>
						<% cc = contacto(ag.ContactoId) %>
						<td><%= cc.ContactoNombre %> /Tel. <%= cc.Telefono %></td>
						<td><%= ag.Instrucciones%></td>
						<td><%= ag.FechaCita%></td>
						<td><%= ag.LugarCita%></td>
						<td><%= ag.LugarCita2%></td>
						<td><%= ag.LugarCita3%></td>
						<td><%= ag.LugarCita4%></td>
						<td><%= ag.Descripcion%></td>
					</tr>
					<%end%>
				</tbody>
		</table>

		<%end%>
	</div>
</div>